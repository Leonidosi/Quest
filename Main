name = input("Введите имя")
print("Привет" + name)
hp = 100
while hp > 0:
    move = input("Введите действие")
    if move == "Умереть":
        print("Смэрть")
        hp = 0
    if move == "Жить":
        print("Двигаемся дальше")
        hp -= 50
    else:
        print("Неверная команда")
        input()
print("вы умерли")
