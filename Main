hp = 100
# while hp >= 0:

print("begin")

while hp >= 0:
    move = input("Введите действие")
    if move == "Умереть":
        print("Смэрть")
        hp = 0
    if move == "Жить":
        print("Двигаемся дальше")
        hp -= 50

print("вы умерли")